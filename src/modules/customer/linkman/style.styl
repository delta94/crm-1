.container
  :global
    .ant-row
      position relative
      margin-bottom: 5px
  .operate
    position: absolute
    left: -28px
    line-height: 32px
    // margin-top: 6px
    .add, .delete
      width: 20px
      height: 20px
      border-radius: 50%
      display: inline-block
      cursor pointer
      font-size: 18px
      line-height: 18px;
      text-align: center;
      color: #ffffff;
      user-select none
      background: rgba(0,0,0,0.12)
      &:hover
        background: #1890ff
    .add
      margin-right: 2px