.container
  display: flex
  flex-direction: column
  border-radius: 8px 8px 0 0 / 8px 8px 0 0
  height: 100%
  .top
    border-radius: 8px 8px 0 0 / 8px 8px 0 0
    height: 56px
    background-color: #F8FBFD
    line-height: 56px
    padding: 0 20px
    &:after, &:before
      content: ''
      clean: both
    .title
      font-size: 14px
      font-weight: 500
      float: left
    .right-content
      float: right
  .content
    overflow-y: auto
    overflow-x hidden
    padding: 20px
.add
  cursor: pointer
  float left
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  &:hover
    color: #1890ff
  .add-icon
    display inline-block
    width: 16px
    height: 16px
    background: url('@/assets/images/add.png') 0 0 / 100% 100% no-repeat
    cursor: pointer
    position: relative
  .text
    margin-left: 5px