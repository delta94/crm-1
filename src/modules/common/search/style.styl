.container
  display: inline-block
  ul
    li
      padding: 5px 5px 6px
      .label
        text-align: right
        width: 80px
        display: inline-block
        padding-right: 20px
      .options
        display: inline-block
        .tag
          display: inline-block
          min-width: 80px
          :global
            .ant-tag
              padding: 0 7px
              min-width: 50px
              text-align: center
        .after
          display: inline-block
          span:first-child
            margin-right: 8px
    li.item
      display inline-block
      width 200px
  :global
    .ant-calendar-picker
      width: 240px
    .pilipa-dropdown
      width 100px
.icon
  cursor pointer