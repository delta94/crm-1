.container
  display: inline-block
  ul
    li
      padding: 3px 5px 3px
      .label
        text-align: right
        width: 80px
        display: inline-block
        padding-right: 5px
        margin-bottom: 3px
      .options
        display: inline-block
        .tag
          display: inline-block
          min-width: 80px
          :global
            .ant-tag
              padding: 0 7px
              min-width: 50px
              text-align: center
              margin-bottom: 3px
        .after
          display: inline-block
          span:first-child
            margin-right: 8px
          :global
            .ant-calendar-picker-input
              margin-top: -4px
              border none
              input 
                &::placeholder
                  color: rgba(0,0,0,.65)
  :global
    .ant-calendar-picker
      width: 200px
    .ant-calendar-picker-icon
      font-size 12px
      margin-bottom: 3px
    .ant-calendar-range-picker-input
      font-size 12px
.icon
  cursor pointer
.select
  display inline-block
  margin-left -35px
